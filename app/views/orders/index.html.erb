<h1>Listing orders</h1>



<script type="text/javascript">
$(function() {
new Highcharts.Chart({
chart: {
renderTo: "orders_chart"
},
title: {
text: "Ankit's Highchart Demo"
},
xAxis: {
type: "datetime"
},
yAxis: {
title: {
text: "Dollar"
}
},
series: [{
pointInterval: <%= 2.days * 1000 %>,
pointStart: <%= 1.week.ago.to_i * 1000 %>,
data: <%= (1.day.ago.to_date..Date.today + 20.days).map {|date| Order.data(date).to_f}.inspect%>
}]

});
});
</script>
<div id="orders_chart" style="width:560px; height:300px;"></div>

<table>
  <tr>
    <th>Numbers</th>
    <th>Purchased</th>
    <th>Shipping</th>
    <th>Total</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.numbers %></td>
    <td><%= order.purchased.to_date %></td>
    <td><%= order.shipping %></td>
    <td><%= order.total %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= paginate @orders %>

<%= link_to 'New Order', new_order_path %>
